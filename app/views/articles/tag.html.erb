<h1>Articles</h1>

<% @articles.each do |article| %>
  
    <h2 class="title"><%= link_to article.title, article  %></a></h2>    
    <p class="date"><%= article.date.strftime("%b") %><b><%= article.date.strftime("%d") %></b></p>    
    
    <%= article.content %>
    
    
    <p><%= article.author %></p>
    <p>tags 
    <% article.tags.split(",").each do |tag| %>       
      <%= link_to tag, :action=>"tag", :id => tag %>
    <% end %>
    </p>
    <p>
    <%= link_to 'Show', article %>
    <%= link_to 'Edit', edit_article_path(article) %>
    <%= link_to 'Destroy', article, :confirm => 'Are you sure?', :method => :delete %></p>
  
<% end %>


